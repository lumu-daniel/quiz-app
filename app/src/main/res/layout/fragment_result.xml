<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
            android:id="@+id/tvTotalQns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="15dp"
            android:fontFamily="@font/dubai_regular"
    />
    <TextView
            android:id="@+id/tvTCorrectAns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:fontFamily="@font/dubai_regular"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvTotalQns"
    />
    <TextView
            android:id="@+id/tvWrongAns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:fontFamily="@font/dubai_regular"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvTCorrectAns"
    />
    <TextView
            android:id="@+id/tvScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:fontFamily="@font/dubai_regular"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvWrongAns"
    />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTryAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvScore"
            android:layout_marginTop="40dp"
            android:paddingVertical="10dp"
            android:text="Try Again"
            android:textAllCaps="false"
            android:fontFamily="@font/dubai_medium"
            android:textSize="15dp"
            app:cornerRadius="10dp"
    />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResultAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnTryAgain"
            android:layout_marginTop="20dp"
            android:paddingVertical="10dp"
            android:text="Result Analysis"
            android:textAllCaps="false"
            android:fontFamily="@font/dubai_medium"
            android:textSize="15dp"
            app:cornerRadius="10dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>